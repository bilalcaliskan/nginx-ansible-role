user nginx;

worker_processes {{ worker_processes }};
worker_rlimit_nofile {{ worker_rlimit_nofile | int }};

error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;
{% if version == "1.16.1" %}
load_module /etc/nginx/modules/ngx_http_vhost_traffic_status_module.so;
{% endif %}

events {
    worker_connections {{ worker_connections | int }};
    multi_accept on;
    use epoll;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    access_log /var/log/nginx/access.log  main;
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    #gzip on;
{% if vservers | length == 0 %}
    include /etc/nginx/conf.d/*.conf;
{% else %}
    {% for item in vservers -%}
    include /etc/nginx/conf.d/{{ item.file }};
    {% endfor %}
{% endif %}
}
